<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MangaVerse" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>

        <!-- BottomNavigationView style. -->
        <item name="bottomNavigationStyle">@style/Widget.MangaVerse.BottomNavigationView</item>
    </style>

    <style name="Widget.MangaVerse.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MangaVerse.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.MangaVerse.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/greenish</item>
        <item name="colorOnPrimary">@color/gray_light</item>
    </style>

</resources>