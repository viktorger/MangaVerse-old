<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="102dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/item_manga_shortcut"
        android:layout_width="102dp"
        android:layout_height="158dp"
        tools:src="@drawable/item_manga_shortcut"

        android:contentDescription="Manga shortcut"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/item_manga_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_manga_title"

        android:textColor="@color/black"
        android:textSize="14sp"

        app:layout_constraintTop_toBottomOf="@id/item_manga_shortcut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_manga_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_manga_type"
        android:textColor="@color/gray_light"
        android:textSize="12sp"

        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/item_manga_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>